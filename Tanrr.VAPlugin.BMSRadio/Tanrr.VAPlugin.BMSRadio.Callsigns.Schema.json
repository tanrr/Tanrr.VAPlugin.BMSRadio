{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",
  "properties": {

    "version": {
      "type": "object",
      "properties": {
        "verPluginJSON": {
          "allOf": [
            { "type": "string" },
            { "maxLength": 15 }
          ]
        },
        "verBMSJSON": {
          "allOf": [
            { "type": "string" },
            { "maxLength": 15 }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "verPluginJSON",
        "verBMSJSON"
      ]
    },

    "flightInfo": {
      "type": "object",
      "properties": {
        "callsignFlight": {
          "allOf": [
            { "type": "string" },
            { "maxLength": 20 }
          ]
        },
        "numberFlight": {
          "allOf": [
            { "type": "string" },
            { "maxLength": 10 }
          ]
        },
        "posInFlight": {
          "allOf": [
            { "type": "string" },
            { "maxLength": 10 }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "callsignFlight",
        "numberFlight",
        "posInFlight"
      ]
    },

    "awacsNames": {
      "allOf": [
        { "type": "array" },
        { "minItems": 1 },
        { "maxItems": 3 },
        {
          "items": {
            "allOf": [
              { "type": "string" },
              { "maxLength": 200 }
            ]
          }
        }
      ]
    },

    "tankerNames": {
      "allOf": [
        { "type": "array" },
        { "minItems": 1 },
        { "maxItems": 3 },
        {
          "items": {
            "allOf": [
              { "type": "string" },
              { "maxLength": 200 }
            ]
          }
        }
      ]
    },

    "jtacNames": {
      "allOf": [
        { "type": "array" },
        { "minItems": 1 },
        { "maxItems": 5 },
        {
          "items": {
            "allOf": [
              { "type": "string" },
              { "maxLength": 200 }
            ]
          }
        }
      ]
    },

    "pilotNames": {
      "allOf": [
        { "type": "array" },
        { "minItems": 1 },
        { "maxItems": 35 },
        {
          "items": {
            "allOf": [
              { "type": "string" },
              { "maxLength": 200 }
            ]
          }
        }
      ]
    },

    "theatersTEMP": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "map": {
            "type": "string"
          },
          "names": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "map",
          "names"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "version",
    "flightInfo",
    "awacsNames",
    "tankerNames",
    "jtacNames",
    "pilotNames",
    "theatersTEMP"
  ]
}